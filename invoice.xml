<!-- This file is part account_invoice_jreport module for Tryton.
The COPYRIGHT file at the top level of this repository contains the full copyright notices and license terms. -->
<tryton>
    <data>
        <record model="ir.action.report" id="account_invoice.report_invoice">
            <field name="name">Invoice</field>
            <field name="model">account.invoice</field>
            <field name="report_name">account.invoice</field>
            <field name="report">account_invoice_jreport/invoice.jrxml</field>
            <field name="extension">pdf</field>
        </record>

        <!-- desactive wizard invoice -->
        <record model="ir.action.wizard" id="account_invoice.print">
            <field name="name">Invoice</field>
            <field name="wiz_name">account.invoice.print</field>
            <field name="model">account.invoice</field>
            <field name="active">False</field>
        </record>

        <!-- add keyword form print in invoice report -->
        <record model="ir.action.keyword" id="report_keyword_print">
            <field name="keyword">form_print</field>
            <field name="model">account.invoice,-1</field>
            <field name="action" ref="account_invoice.report_invoice"/>
        </record>
    </data>
</tryton>


